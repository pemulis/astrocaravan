<section class="form pull-left">
<%= form_for(@project) do |f| %>
  <%= f.label :name, 'Project name' %>
  <%= f.text_field :name %>

  <%= f.label :description, 'What are you working on?' %>
  <%= f.text_area :description %>

  <%= f.label :tag_list, 'Tags (separated by commas)' %>
  <%= f.text_field :tag_list %>

  <%= f.label :location, 'Where are you working on this? (optional)' %>
  <%= f.text_field :location %>

  <%= f.label :image_url, 'Upload a picture!' %>
  <%= f.filepicker_field :image_url, multiple: true, name: "project[image_url]", class: "btn btn-default" %>

  <%= f.submit 'Post Project', class: "btn btn-primary" %>
<% end %>
</section>
